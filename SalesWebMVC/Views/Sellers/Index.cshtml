@model IEnumerable<SalesWebMVC.Models.Seller>

@{

    ViewData["Title"] = "Sellers";

}

<h2>@ViewData["Title"]</h2>

<p>
    <!--   Criando um botão   -->
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>


<table class="table table-striped table-hover">
    <thead>
        <!--   Cabeçalho   -->
        <tr class="success">
            <!--   Colorir linha cabeçalho   -->
            <!--   Linha do Cabeçalho da tabela  -->
            <th>
                <!--   Primeira coluna   -->
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <!--  Segunda coluna   -->
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                <!--   Terceira coluna   -->
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                <!--  Primeira coluna  -->
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th></th><!--   Apenas para espaço   -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!-- Linha -->
                <td>
                    <!--  Com varias colunas  -->
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <!--   Coluna  -->
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <!--  Coluna  -->
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    <!--   Coluna  -->
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-rout-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-rout-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-rout-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>

